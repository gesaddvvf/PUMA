<script>
const PASSWORD_CORRETTA = "********"; // cambia qui

function mostraLogin() {
  document.getElementById("loginBox").classList.remove("hidden");
}

function login() {
  const passField = document.getElementById("password");
  const pass = passField.value;

  if(pass === PASSWORD_CORRETTA){
    document.getElementById("loginBox").classList.add("hidden");
    document.getElementById("areaProtetta").classList.remove("hidden");
    passField.value = "";
  } else {
    alert("Password errata");
    passField.value = "";
  }
}

function apriModulo(){
  window.open("https://forms.gle/WoabAMrU5jfUouzL7", "_blank");
}

function logout(){
  document.getElementById("areaProtetta").classList.add("hidden");
  document.getElementById("loginBox").classList.add("hidden");
}
</script>

